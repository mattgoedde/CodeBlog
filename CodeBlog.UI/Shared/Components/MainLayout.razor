@inherits LayoutComponentBase

<CascadingValue Value="@IsLoading">
    <Layout Sider>
        <LayoutSiderContent>
            <SideMenu />
        </LayoutSiderContent>
        <Layout Loading="@IsLoading">
            <LayoutContent TextColor="@TextColor.Dark" Background="@Background.Light">
                <Container Fluid Padding="Padding.Is4.OnDesktop">
                    @if (!IsLoading)
                    {
                        @Body
                    }
                    else
                    {
                        <SpinKit Type="SpinKitType.Wave" />
                    }
                </Container>
            </LayoutContent>
            <LayoutFooter Fixed Background="@Background.Secondary" TextColor="@TextColor.Light">
                <Paragraph TextAlignment="TextAlignment.Center" Width="Width.Is100">Copyright Matthew Goedde ©@DateTime.Now.Year</Paragraph>
            </LayoutFooter>
        </Layout>
    </Layout>
</CascadingValue>

@code {
    public bool IsLoading { 
        get; 
        set; } = false;
}